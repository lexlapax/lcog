# CogMem Environment Variables
# Copy this file to .env and fill in the required values

# Integration test flag - set to 'true' to run integration tests
INTEGRATION_TESTS=true

# OpenAI API Key for embedding generation and LLM processing
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API Configuration (optional)
# OPENAI_ORGANIZATION=your_organization_id_here
# OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
# OPENAI_COMPLETION_MODEL=gpt-3.5-turbo

# Database Connection Parameters (for integration tests)
TEST_DB_URL=postgres://postgres:postgres@localhost:5433/cogmem_test?sslmode=disable
# DB_HOST=localhost
# DB_PORT=5433  # Test database port
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_NAME=cogmem_test